#!/bin/sh

# The famous "get a menu of emojis to copy" script.
# Extracted and forked from Luke Smith's voidrice (https://github.com/LukeSmithxyz/voidrice)

# Defaults
lines="$DMENU_LINES"
border="$DMENU_BORDER"
height="$DMENU_HEIGHT"
prompt="ó°±¨ Emojis:"

# dmenu command 
dmenu_cmd(){
	dmenu -c -n -l $lines -bw $border -h $height -p "$prompt"
}

# Get user selection via dmenu from emoji file.
chosen=$(cut -d ';' -f1 $XDG_DATA_HOME/assets/emoji | dmenu_cmd | sed "s/ .*//")

# Exit if none chosen.
[ -z "$chosen" ] && exit

# If you run this command with an argument, it will automatically insert the
# character. Otherwise, show a message that the emoji has been copied.
if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	printf "$chosen\n" | tr -d '\n' | xclip -selection clipboard
	notify-send -i $XDG_DATA_HOME/assets/dunst/icons/face-smile-big.svg -u low Emojis "Successfully copied '$chosen' to clipboard!" &
fi

