#!/bin/sh

# Defaults
lines=2
border="$DMENU_BORDER"
height="$DMENU_HEIGHT"
prompt="󰄠 iOS Mounter:"


# List of choices 
list_choices(){
	cat << EOF
󰄟 Mount
󰮑 Eject
EOF
}

# dmenu command
dmenu_cmd(){
	dmenu -c -n -l $lines -bw $border -h $height -p "$prompt"
}

choice=$(list_choices | dmenu_cmd)

case "$choice" in
  "󰄟 Mount") ios-mount ;;
  "󰮑 Eject") ios-unmount ;;
esac
