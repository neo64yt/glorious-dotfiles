# Defaults
prompt="󱍕 Quick access:"
BEMENU_OPTS="$BEMENU_OPTS -p '$prompt'"

# List of choices (function)
list_choices(){
	cat << EOF
󰀻 Applications
󰆍 Run
󰐦 System
󰱨 Emojis
󰥻 Keyboard layouts
󰢻 Settings
󰯜 Screen recorder
EOF
}

choice=$(list_choices | bemenu)

case "$choice" in
  	"󰀻 Applications") apps ;;
  	"󰆍 Run") runner ;;
  	"󰐦 System") sessionmgr ;;
	"󰥻 Keyboard layouts") kbswitch ;;
  	"󰱨 Emojis") dmenuemoji ;;
  	"󰢻 Settings") set-mgr ;;
  	"󰯜 Screen recorder") screenrecmenu ;;
	*) exit 1 ;;
esac



# vim: ft=sh
