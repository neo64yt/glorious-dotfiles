#!/bin/sh

# Defaults
lines="$DMENU_LINES"
border="$DMENU_BORDER"
height="$DMENU_HEIGHT"
prompt="󱍕 Quick access:"

# List of choices (function)
list_choices(){
	cat << EOF
󰀻 Applications
󰆍 Run
󰐦 System
󰱨 Emojis
󰢻 Settings
󰄠 iOS Mounter
EOF
}

# dmenu command
dmenu_cmd(){
	dmenu -c -n -l $lines -bw $border -h $height -p "$prompt"
}

choice=$(list_choices | dmenu_cmd)

case "$choice" in
  "󰀻 Applications") apps ;;
  "󰆍 Run") runner ;;
  "󰐦 System") sessionmgr ;;
  "󰱨 Emojis") dmenuemoji ;;
  "󰢻 Settings") set-mgr ;;
  "󰄠 iOS Mounter") imountmgr ;;
esac



# vim: ft=sh
