#!/bin/sh

# Defaults
lines="$DMENU_LINES"
border="$DMENU_BORDER"
height="$DMENU_HEIGHT"
prompt="󰯜 Screen recorder:"

# List of choices
list_choices(){
	cat << EOF
󰑊 Start recording
󰓛 Stop recording
EOF
}

# dmenu command
dmenu_cmd(){
	dmenu -c -n -l $lines -bw $border -h $height -p "$prompt"
}

# Command
choice=$(list_choices | dmenu_cmd)

case "$choice" in
  	"󰑊 Start recording") screenrec ;;
  	"󰓛 Stop recording") pkill -INT ffmpeg ;;
esac



# vim: ft=sh
