# Managing sessions

# Defaults
prompt="󰐦 System ($(uptime -p)):"
BEMENU_OPTS="$BEMENU_OPTS -p '$prompt'"

case "$(readlink -f /sbin/init)" in
	*systemd*) initctl="systemctl" ;;
	*) initctl="loginctl" ;;
esac

# List of choices
list_choices(){
	cat << EOF
󰐥 Power off
󰜉 Restart
󰽥 Suspend
󰍁 Lock
󰍃 Log out
EOF
}

# Menu
choice=$(list_choices | bemenu)

case "$choice" in
  	"󰐥 Power off") $initctl poweroff ;;
	"󰜉 Restart") $initctl reboot ;;
	"󰽥 Suspend") suspend-notify ;;
	"󰍁 Lock") $LOCKER ;;
	"󰍃 Log out") sh $SESSION_KILLER ;;
	*) exit 1 ;;
esac



# vim: ft=sh
