#!/bin/sh

# This file stores environment variables 
## GTK3-NOCSD ##
export GTK_CSD="0"
export LD_PRELOAD="/usr/\${LIB}/libgtk3-nocsd.so.0${LD_PRELOAD:+:$LD_PRELOAD}"

## GENERIC CONFIGURATION ##
export PATH="$HOME/.local/bin:$HOME/bin:$PATH" # Binaries path
export XDG_CONFIG_HOME="$HOME/.config" # XDG configuration directory
export XDG_DATA_HOME="$HOME/.local/share" # XDG data directory
export XDG_CACHE_HOME="$HOME/.cache" # XDG cache directory
export KEYBIND="$XDG_CONFIG_HOME/sxhkd/sxhkdrc" # WM-independent keybindings
export AUTOSTART="$XDG_CONFIG_HOME/autostart-cmds/autostart.sh" # WM-independent autostart
export PAGER="more" # Use more as pager
export MANPAGER="nvim -c 'set ft=man'" # Use Neovim as manpager
export IOS_MOUNTPOINT="$HOME/iOS" # iOS mountpoint (needed by iOS Mounter)

## GENERIC PROGRAM ##
export STARTMENU="jgmenu_run"
export QUICKMENU="quickmenu"
export SETTINGS_MGR="set-mgr"
export SESSION_MGR="sessionmgr"
export EMOJI_PICKER="dmenuemoji"

## UTILITY SCRIPTS ##
export LOCKER="xsecurelock"
export LOCK="lock" 
export SCREENSHOOTER="screenshot"

## DEFAULT APPS ##
export TERMINAL="alacritty"
export BROWSER="firefox"
export EDITOR="nvim"
export VISUAL="nvim"

## DMENU SETTINGS MANAGER ##
export STYLE="lxappearance" # Appearance
export USER_INFO="mugshot" # Account
export LOGIN="lightdm-gtk-greeter-settings" # Login screen
export RANDR="lxrandr" # Display
export POWER_MGR="mate-power-preferences" # Power manager
export NM_EDITOR="nm-connection-editor" # Network
export BLUETOOTH="blueman-manager" # Bluetooth 
export INPUT="lxinput" # Input devices
export AUDIO="pavucontrol" # Audio
export PRINT="system-config-printer" # Printer

## XSECURELOCK SETTINGS ##
export XSECURELOCK_PASSWORD_PROMPT="asterisks"
export XSECURELOCK_FONT="JetBrains Mono:size=15"
export XSECURELOCK_COMPOSITE_OBSCURER="0"
export XSECURELOCK_SHOW_DATETIME="1"
export XSECURELOCK_SHOW_HOSTNAME="2"
export XSECURELOCK_AUTH_CURSOR_BLINK="1"
export XSECURELOCK_AUTH_SOUNDS="1"

## DBUS-LAUNCH ##
export $(dbus-launch)

## EOF ##
